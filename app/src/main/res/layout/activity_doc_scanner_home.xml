    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ui.activities.DocScannerHomeActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <include
        android:id="@+id/content_empty"
        layout="@layout/activity_doc_scanner_home_content_empty"
        android:visibility="gone" />

    <include
        android:id="@+id/content_recents"
        layout="@layout/activity_doc_scanner_home_content_recent"
        android:visibility="gone" />

    <include
        android:id="@+id/banner_ad"
        layout="@layout/ad_banner" />

</RelativeLayout>